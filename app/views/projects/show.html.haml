- model_class = Project
.page-header
  %h3= @project.title
  %h3
    %small= "Organization - #{tenant_name @project.tenant_id}"

%p
  %strong= model_class.human_attribute_name(:title) + ':'
  %br
  = @project.title
%p
  %strong= model_class.human_attribute_name(:details) + ':'
  %br
  = @project.details
%p
  %strong= model_class.human_attribute_name(:expected_completion_date) + ':'
  %br
  = @project.expected_completion_date
%p
  %strong= model_class.human_attribute_name(:tenant_id) + ':'
  %br
  = @project.tenant_id

%h3 Artifacts
= render "artifacts/list", artifacts: @project.artifacts

%br
%br

= link_to '< Back to Organization Home', root_path, :class => 'btn btn-default'
= link_to t('.edit', :default => t("helpers.links.edit")), edit_tenant_project_path(project: @project, tenant: @project.tenant_id), :class => 'btn btn-default'
= link_to "Edit Project Users", users_tenant_project_path(tenant_id: @project.tenant_id, id: @project.id), class: "btn btn-default"
= link_to t('.destroy', :default => t("helpers.links.destroy")), tenant_project_path(project:@project, tenant: @project.tenant_id), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
