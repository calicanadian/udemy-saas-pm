.navbar.navbar-default.navbar-static-top
  .container
    = link_to "Project Management App", root_path, class: "navbar-brand"

    %button.navbar-toggle(type="button" data-toggle="collapse" data-target=".navbar-responsive-collapse")
      %span.icon-bar
      %span.icon-bar
      %span.icon-bar
    .navbar-collapse.collapse.navbar-responsive-collapse
      .col-md-6
      - if current_user
        %ul.nav.navbar-right.col-md-4
          %li.col-md-8.user-name.text-right
            %i.fa.fa-user
            = current_user.email
          %li.col-md-4.logout
            = link_to "logout", destroy_user_session_path, class: "btn btn-xs btn-danger", method: :delete
      - else
        %ul.nav.navbar-right.col-md-4
          %li.col-md-4
            = link_to "log in", new_user_session_path, class: "btn btn-xs btn-info"
